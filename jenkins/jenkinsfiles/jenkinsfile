node {
    triggers {
        cron('* * * * *')
    }
    stage('SCM') {
        echo 'Gathering code from version control'
        git branch: '${branch}', url: 'https://github.com/rakopoul/groovy.git'
    }
    stage('Build') {
        echo 'Building..'
        sh 'gcc apps/HelloWorld.cpp -o HelloWorld'
    }
    stage('Test') {
        echo 'Testing..'
        sh './HelloWorld'
    }
    stage('Deploy') {
        echo 'Deploying..'
    }
}
